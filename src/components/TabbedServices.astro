---
import { getCollection } from 'astro:content';

interface Props {
  headline?: string;
  practicesHeadline?: string;
  industriesHeadline?: string;
}

const { 
  headline = "Our Practice Areas",
  practicesHeadline = "Practices",
  industriesHeadline = "Industries"
} = Astro.props;

const services = await getCollection('services');
const sortedServices = services.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

// Group into practices and industries (if tagged)
const practices = sortedServices.filter(s => !s.data.category || s.data.category === 'practice');
const industries = sortedServices.filter(s => s.data.category === 'industry');
---

<section class="bg-neutral-50 py-20 lg:py-28 relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
    <!-- Section Header -->
    <div class="mb-12 lg:mb-16" data-reveal>
      <div class="inline-flex items-center gap-3 text-xs uppercase tracking-[0.25em] text-neutral-500 mb-4">
        <span class="h-[3px] w-8 bg-primary-500"></span>
        <span>Practice Areas</span>
      </div>
      <h2 class="font-display text-4xl sm:text-5xl lg:text-6xl text-charcoal-950 tracking-[-0.02em]">
        {headline}
      </h2>
    </div>
    
    <!-- Tab Buttons (only show if we have industries) -->
    {industries.length > 0 && (
      <div class="flex flex-wrap gap-3 mb-10" role="tablist" data-reveal>
        <button 
          type="button"
          class="tab-button px-6 py-3 text-sm font-semibold uppercase tracking-[0.15em] border-2 transition-all active"
          data-tab="practices"
          role="tab"
          aria-selected="true"
        >
          {practicesHeadline}
        </button>
        <button 
          type="button"
          class="tab-button px-6 py-3 text-sm font-semibold uppercase tracking-[0.15em] border-2 transition-all"
          data-tab="industries"
          role="tab"
          aria-selected="false"
        >
          {industriesHeadline}
        </button>
      </div>
    )}
    
    <!-- Practices Tab / Main Content -->
    <div class="tab-content" id="practices-tab" role="tabpanel">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-5" data-reveal-stagger>
        {practices.map((service) => (
          <a 
            href={`/services/${service.slug}`}
            class="group relative flex items-center justify-between p-6 lg:p-7 bg-white border border-neutral-200 hover:border-primary-500 hover:shadow-lg hover:-translate-y-1 transition-all duration-300"
          >
            <!-- Left accent bar on hover -->
            <div class="absolute left-0 top-0 bottom-0 w-1 bg-primary-500 scale-y-0 group-hover:scale-y-100 transition-transform origin-bottom"></div>
            
            <h3 class="font-display text-lg lg:text-xl text-charcoal-900 group-hover:text-primary-600 transition-colors pr-4 leading-tight">
              {service.data.title}
            </h3>
            
            <!-- Arrow circle -->
            <div class="w-10 h-10 rounded-full border-2 border-neutral-200 group-hover:border-primary-500 group-hover:bg-primary-500 flex items-center justify-center flex-shrink-0 transition-all">
              <svg class="w-4 h-4 text-neutral-400 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
    
    <!-- Industries Tab -->
    {industries.length > 0 && (
      <div class="tab-content hidden" id="industries-tab" role="tabpanel">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-5">
          {industries.map((service) => (
            <a 
              href={`/services/${service.slug}`}
              class="group relative flex items-center justify-between p-6 lg:p-7 bg-white border border-neutral-200 hover:border-primary-500 hover:shadow-lg hover:-translate-y-1 transition-all duration-300"
            >
              <!-- Left accent bar on hover -->
              <div class="absolute left-0 top-0 bottom-0 w-1 bg-primary-500 scale-y-0 group-hover:scale-y-100 transition-transform origin-bottom"></div>
              
              <h3 class="font-display text-lg lg:text-xl text-charcoal-900 group-hover:text-primary-600 transition-colors pr-4 leading-tight">
                {service.data.title}
              </h3>
              
              <!-- Arrow circle -->
              <div class="w-10 h-10 rounded-full border-2 border-neutral-200 group-hover:border-primary-500 group-hover:bg-primary-500 flex items-center justify-center flex-shrink-0 transition-all">
                <svg class="w-4 h-4 text-neutral-400 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>
    )}
    
    <!-- View All Link -->
    <div class="mt-12" data-reveal>
      <a href="/services" class="inline-flex items-center gap-2 text-primary-500 font-semibold hover:gap-3 transition-all">
        View all practices
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .tab-button {
    color: #525252;
    border-color: #e5e5e5;
    background: white;
  }

  .tab-button:hover {
    color: #18181b;
    border-color: #a3a3a3;
    background: white;
  }

  .tab-button.active {
    color: white;
    border-color: #DC2626;
    background: #DC2626;
  }
</style>

<script>
  const tabButtons = document.querySelectorAll('.tab-button');
  const tabContents = document.querySelectorAll('.tab-content');
  
  tabButtons.forEach(button => {
    button.addEventListener('click', () => {
      const tabId = button.getAttribute('data-tab');
      
      // Update buttons
      tabButtons.forEach(btn => {
        btn.classList.remove('active');
        btn.setAttribute('aria-selected', 'false');
      });
      button.classList.add('active');
      button.setAttribute('aria-selected', 'true');
      
      // Update content
      tabContents.forEach(content => {
        content.classList.add('hidden');
      });
      document.getElementById(`${tabId}-tab`)?.classList.remove('hidden');
    });
  });
</script>
